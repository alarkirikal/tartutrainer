<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/collectionsHeaderWrapper"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/black"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <TextView
            android:id="@+id/collections"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@android:color/white"
            android:text="Collections"
            android:textSize="22sp" />

        <Button
            android:id="@+id/purchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Purchase"
            android:textColor="@android:color/white"
            android:paddingRight="10dp"
            android:textSize="22sp" />
    </RelativeLayout>
    
    <View
        android:id="@+id/collectionsHeaderDivider"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@id/collectionsHeaderWrapper"
        android:background="@drawable/gradient_blue" />

    <ListView
        android:id="@+id/listAllCollections"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/collectionsHeaderDivider"
        android:divider="@drawable/gradient_green"
        android:dividerHeight="1px"
        android:paddingLeft="7dp"
        android:paddingRight="7dp" />

</RelativeLayout>