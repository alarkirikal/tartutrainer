<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/collectionItemInfoHeaderWrapper"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/black"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <TextView
            android:id="@+id/collectionItemInfoName"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@android:color/white"
            android:textSize="22sp" />
    </RelativeLayout>

    <View
        android:id="@+id/collectionItemInfoHeaderDivider"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@id/collectionItemInfoHeaderWrapper"
        android:background="@drawable/gradient_blue" />

    <LinearLayout
        android:id="@+id/collectionItemInfoContentWrapper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/collectionItemInfoHeaderDivider"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ItemInfoImagesWrapper"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.40"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/InfoimageOne"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".50"
                android:adjustViewBounds="true"
                android:contentDescription="ad"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:src="@drawable/exercise_thumb" />

            <ImageView
                android:id="@+id/InfoimageTwo"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".50"
                android:adjustViewBounds="true"
                android:contentDescription="ad"
                android:src="@drawable/exercise_thumb" />
        </LinearLayout>

        <View
            android:id="@+id/collectionItemInfoImageDivider"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@drawable/gradient_blue" />

        <LinearLayout
            android:id="@+id/ItemInfoTextWrapper"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="0.50"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ItemInfoLevelRowWrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/ItemInfoLevelLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingLeft="10dp"
                    android:text="Level:"
                    android:textSelectHandleRight="@+id/ItemInfoLevelText"
                    android:textSize="22sp" />

                <TextView
                    android:id="@id/ItemInfoLevelText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingLeft="10dp"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ItemInfoModalityRowWrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/ItemInfoModalityLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingLeft="10dp"
                    android:text="Modality :"
                    android:textSelectHandleRight="@+id/ItemInfoModalityText"
                    android:textSize="22sp" />

                <TextView
                    android:id="@id/ItemInfoModalityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingLeft="10dp"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ItemInfoMusclesRowWrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/ItemInfoMusclesLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingLeft="10dp"
                    android:text="Muscles :"
                    android:textSelectHandleRight="@+id/ItemInfoMusclesText"
                    android:textSize="22sp" />

                <TextView
                    android:id="@id/ItemInfoMusclesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingLeft="10dp"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ItemInfoEquipmentRowWrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/ItemInfoEquipmentLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingLeft="10dp"
                    android:text="Equipment :"
                    android:textSelectHandleRight="@+id/ItemInfoEquipmentText"
                    android:textSize="22sp" />

                <TextView
                    android:id="@id/ItemInfoEquipmentText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingLeft="10dp"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ItemInfoInstructionsRowWrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/ItemInfoInstructionsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingLeft="10dp"
                    android:text="Instructions :"
                    android:textSelectHandleRight="@+id/ItemInfoInstructionsText"
                    android:textSize="22sp" />

                <TextView
                    android:id="@id/ItemInfoInstructionsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingLeft="10dp"
                    android:textSize="22sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>