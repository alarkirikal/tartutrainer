<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/clientsHeaderWrapper"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/black"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <TextView
            android:id="@+id/clientsHeader"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="New Template"
            android:textColor="@android:color/white"
            android:textSize="22sp" />

        <ImageButton
            android:id="@+id/saveTemplate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_action_new_white"
            android:contentDescription="addNewClient_icon"
            android:paddingRight="10dp" />
    </RelativeLayout>

    <View
        android:id="@+id/templatesHeaderDivider"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@id/clientsHeaderWrapper"
        android:background="@drawable/gradient_blue" />

    <LinearLayout
        android:id="@+id/templatesContentWrapper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/templatesHeaderDivider"
        android:orientation="vertical" >


        <EditText
            android:id="@+id/templateName"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:hint="Template Name"
            android:inputType="text" />

        <EditText
            android:id="@+id/templateDescription"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:hint="Template Description"
            android:inputType="text" />

            
        <TextView
            android:id="@+id/templateToDo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="You can save the current program as \r\n template for future programs." />
    </LinearLayout>

</RelativeLayout>